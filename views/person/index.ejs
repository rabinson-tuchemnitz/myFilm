<div class="container p-5">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="h2">Persons</h1>
      <% if(typeof loggedIn != 'undefined' && loggedIn && userType == "admin"){ %>
        <a href="/person" class="btn btn-primary">Add Person</a>
      <% } %>      
    </div>
    <br>
    <div class="col-md-8 col-sm-12 col-xs-12">
      <% persons.forEach(function(person) { %>
        <div class="col-md-12">
          <div class="ceb-item-style-2">
            <img src="img/crews/cw1.jpg" alt="">
            <div class="ceb-infor">
              <div class="d-flex justify-content-between align-items-center">
                <h2><a href="/person/<%=person.id%>"><%= person.name %></a></h2>
              </div>
              <span><%= person.role%> &nbsp; <%= person.country %></span>
            </div>
          </div>
        </div>
      <% }) %>  
    </div>
</div>
  