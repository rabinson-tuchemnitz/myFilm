<div class="container p-5">
  <div class="film-detail-wrapper d-flex">
    <div class="film-image-container">
      <img src="/img/movies/mv1.jpg" />
      <% if(film.film_type == "movie" || film.film_type == "episode") { %>
        <button class="btn btn-primary mt-2">Watch</button>
      <% } %>
    </div>
    <div class="mv-item-infor p-4">
      <div class="d-flex justify-content-between">
        <h3>
          <a href="#"><%= film.title %></span></a>
        </h3>
        <div class="action-group">
          <button class="btn btn-outline-secondary">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-pencil-fill"
              viewBox="0 0 16 16"
            >
              <path
                d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"
              />
            </svg>
          </button>
          <button class="btn btn-outline-danger" id="" data-href="/film/18" data-toggle="modal" data-target="#confirm-delete">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-trash-fill"
              viewBox="0 0 16 16"
            >
              <path
                d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"
              />
            </svg>
          </button>
        </div>
      </div>

      <p class="rate">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-star-fill"
          viewBox="0 0 16 16"
        >
          <path
            d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"
          />
        </svg>
        <span>8.1</span> /10
        <a href="#" style="text-decoration: underline">Rate this movie</a>
      </p>
      <p>Genres: 
        <% film.genres[0] != null && film.genres?.forEach(function (genre) { %>
          <%= genre?.title %>,
        <% }); %>  
      </p>
      <p>Persons:
        <% film.persons[0] != null && film.persons?.forEach(function (person) { %>
          <a href="#"><%= person.title %>,</a>
        <% }); %>  
      </p>
      <p class="describe">
        <%= film.description %>
      </p>
    </div>
  </div>
  <br />
  <br />
  <hr />
    <div class="subordinate-list">
      <div class="d-flex justify-content-between align-items-center">
        <% if(film.film_type == "series") { %>
          <h1 class="h2">Seasons</h1>
        <% } else if(film.film_type == "season") { %>
          <h1 class="h2">Episodes</h1>
        <% } else if(film.film_type == "movie") { %>
          <h1 class="h2">Subordinates</h1>
        <% }%>
        
        <% if(typeof loggedIn != 'undefined' && loggedIn && userType == "admin"){ %>
          <a href="<%= film.id %>/season" class="btn btn-primary">Add Season</a>
        <% } %>
      </div>
      <div class="movie-sidelist d-flex">
        <% film.subordinates[0] != null && film.subordinates?.forEach(function (subordinate) { %>
          <div class="movie-item-style-2 movie-item-style-1">
            <img src="/img/movies/mv2.jpg" alt="" />
            <div class="movie-item-info">
              <a href="/film/<%= subordinate?.id %>"><%= subordinate?.title %></a>
              <p>Ratings <span>8.1</span>/ 10</p>
            </div>
          </div>
        <% }); %>  
      </div>
    </div>
  
</div>
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              ...
          </div>
          <div class="modal-body">
              ...
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              <a class="btn btn-danger btn-ok">Delete</a>
          </div>
      </div>
  </div>
</div>
