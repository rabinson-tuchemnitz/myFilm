<div class="container-fluid">
  <div class="row">
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
      >
        <div class="container">
          <h1 class="h2"><%= title %></h1>
          <div class="col-8">
            <form>
              <div class="row mb-3">
                <div class="col">
                  <div class="form-group">
                    <label for="film_type">Film Type</label>
                    <select class="form-control" id="film_type" name="film_type">
                      <option value="movie">Movie</option>
                      <option value="series">Series</option>
                    </select>
                  </div>
                </div>
                <div class="col">
                  <div class="form-group">
                    <label for="subordinate">Subordinate</label>
                    <select class="form-control" id="subordinate" name="subordinate">
                      <option selected>Select...</option>
                      <option value="series">movie 1</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <div class="col">
                  <div class="form-outline">
                    <label class="form-label" for="name">Name</label>
                    <input type="text" id="name" class="form-control" placeholder="Enter name of film" />
                  </div>
                </div>
                <div class="col">
                  <div class="form-outline">
                    <label class="form-label" for="duration">Film Duration</label>
                    <input type="text" class="form-control datepicker" placeholder="Enter the time duration (2:40)"/>
                  </div>
                </div>
                <div class="col">
                  <div class="form-outline">
                    <label class="form-label" for="release_date">Release Date</label>
                    <input type="text" class="form-control datepicker" placeholder="Enter the release date" />
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <div class="col-8">
                  <div class="form-outline">
                    <label class="form-label" for="crew">Film Related person</label>
                    <select class="form-control crew-select multiple" id="crew" name="crew" multiple>
                        <option>John Cena (Producer)</option>
                        <option>The Rock (Director)</option>
                        <option>Edge (Actor)</option>
                        <option>Eve (Actress)</option>
                        <option>Triple-H (Actor)</option>
                      </select>
                </div>
                </div>
                <div class="col-4">
                  <div class="form-outline">
                    <label class="form-label" for="genre">Genre</label>
                    <select
                      class="form-control genre-select multiple"
                      id="genre"
                      name="genre"
                      multiple
                    >
                      <option>Comedy</option>
                      <option>Action</option>
                      <option>Thriller</option>
                      <option>Horror</option>
                      <option>Love</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <div class="col">
                  <div class="form-group">
                    <label for="description">Description</label>
                    <textarea
                      class="form-control"
                      id="description"
                      rows="4"
                      placeholder="Enter description about the film"
                    ></textarea>
                  </div>
                </div>
              </div>
              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4">
                Sign up
              </button>
            </form>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
