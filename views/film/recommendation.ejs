<div class="container p-5">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="h2">Watched Films</h1>
      </div>
      <br>

    <div class="movie-grid">
        <% films.forEach(function(film) { %>
            <div class="movie-item-style-2 movie-item-style-1">
                <img src="/img/movies/mv2.jpg" alt="">
                <div class="movie-item-info">
                    <a href="/film/<%=film.get_film_recommendations.id%>"><%= film.get_film_recommendations.title %></a>
                    <p><span class="film-badge"><%= film.get_film_recommendations.film_type %></span></p>
                </div>
            </div>
          <% }); %> 
    </div>
</div>
